$endif$
$if(room)$
\room{$room$}
$endif$
$if(from)$
\address{%
  $for(from)$
  $from$$sep$ \\
  $endfor$%
}
$endif$
$if(signature)$
\signature{$signature$}
$endif$
$if(tolerance)$

