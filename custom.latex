\geometry{$for(geometry)$$geometry$$sep$, $endfor$}
$endif$
$if(numbersections)$
$else$

\setcounter{secnumdepth}{-\maxdimen}
$endif$

$if(header-includes)$
$for(header-includes)$
$header-includes$
$endfor$
$endif$
\AddToHook{begindocument/before}{\hypersetup{pdfcreator={LaTeX via pandoc}}}
