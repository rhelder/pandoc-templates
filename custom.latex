$endif$

\begin{document}
$if(title)$
\maketitle
$if(abstract)$
\begin{abstract}
$abstract$
\end{abstract}
$endif$
$endif$
$if(to)$
\begin{letter}{%
    $for(to)$
    $to$$sep$ \\
    $endfor$%
  }

$endif$
$if(opening)$
\opening{$opening$}
$endif$

$for(include-before)$
$include-before$

$endfor$
$body$

$if(biblatex)$
$if(suppress-bibliography)$
$else$
\printbibliography$if(biblio-title)$[title=$biblio-title$]$endif$

$endif$
$endif$
