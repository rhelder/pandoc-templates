\documentclass[
$if(fontsize)$
  $fontsize$,
$endif$
$if(papersize)$
  $papersize$paper,
$endif$
$if(classoption)$
$for(classoption)$
  $classoption$$sep$,
$endfor$,
$endif$
$if(biblatex)$
  biblatex={$if(biblio-style)$$biblio-style$$else$authordate$endif$$if(biblatexoptions)$, $for(biblatexoptions)$$biblatexoptions$$sep$, $endfor$$endif$},
$endif$
]{$documentclass$}
